{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dockerfile": {
    "enabled": false
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?) depName=(?<depName>quay.io/kairos/packages:.*?)( versioning=(?<versioning>.*?))?\\sARG\\s+.+_VERSION=(?<currentValue>.*?)\\s"
      ],
      "depNameTemplate": "{{ depName }}-{{ currentValue }}"
    },
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?) depName=(?<depName>[^:]*?)( versioning=(?<versioning>.*?))?\\sARG\\s+.+_VERSION=(?<currentValue>.*?)\\s"
      ]
    }
  ],
  "packageRules": [
    {
      "description": "Drops the v release prefix on certain dependencies",
      "matchDatasources": ["github-releases"],
      "matchDepNames": ["kairos-io/*"],
      "extractVersion": "^v(?<version>.*)$"
    },
    {
      "matchDatasources": ["docker"],
      "matchDepNames": ["ghcr.io/soisolutions-corp/k3s"],
      "versioning": "regex:^v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?<prerelease>-rc\\d+)?-k3s(?<revision>\\d+)$"
    },
    {
      "matchDatasources": ["docker"],
      "matchDepNames": ["quay.io/kairos/packages:*"],
      "versioning": "regex:^(?<compatibility>.+)-(?<major>\\d+)(?:\\.(?<minor>\\d+))?(?:\\.(?<patch>\\d+))?$"
    }
  ],
  "hostRules": [
    {
      "hostType": "docker",
      "matchHost": "ghcr.io",
      "username": "bdalpe",
      "password": "{{ secrets.GHCR_IO_PASSWORD }}"
    }
  ]
}
